<VirtualHost *:80>
    DocumentRoot "<%= node['aet']['apache']['report_base_dir'] %>/aet_reports/current"
    ServerName aet

    ErrorLog "<%= node['aet']['apache']['log_dir'] %>/aet-error.log"
    CustomLog "<%= node['aet']['apache']['log_dir'] %>/aet-access.log" common

    AddOutputFilterByType DEFLATE text/html text/plain text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript

    <LocationMatch "^/((api|configs|suite|system|xunit|lock).*)">
      Header set Access-Control-Allow-Origin "*"
      ProxyPassMatch http://<%= node['aet']['apache']['karaf_ip'] %>:<%= node['aet']['karaf']['web_port'] %>/$1
    </LocationMatch>

</VirtualHost>
